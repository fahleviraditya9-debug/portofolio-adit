    <a href="#" class="to-top" id="toTop"><i class="fas fa-arrow-up"></i></a>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    <script>
        AOS.init({ duration: 1000, once: true });

        const audio = document.getElementById("myAudio");
        const musicControl = document.getElementById("musicControl");
        const musicIcon = document.getElementById("musicIcon");

        function startPortfolio() {
            const welcome = document.getElementById('welcome-screen');
            welcome.classList.add('fade-out');
            document.body.classList.remove('locked');
            audio.play().catch(e => console.log("Audio play blocked by browser"));
            musicIcon.className = "fas fa-pause";
        }

        musicControl.addEventListener("click", () => {
            if (audio.paused) {
                audio.play();
                musicIcon.className = "fas fa-pause";
            } else {
                audio.pause();
                musicIcon.className = "fas fa-play";
            }
        });

        document.addEventListener("visibilitychange", () => {
            if (document.hidden) {
                if (!audio.paused) {
                    audio.pause();
                    musicIcon.className = "fas fa-play";
                    audio.wasPlayingBeforeHidden = true; 
                }
            } else {
                const welcome = document.getElementById('welcome-screen');
                if (welcome.classList.contains('fade-out') && audio.wasPlayingBeforeHidden) {
                    audio.play().catch(e => {});
                    musicIcon.className = "fas fa-pause";
                    audio.wasPlayingBeforeHidden = false;
                }
            }
        });

        new Typed('#typing-text', {
            strings: ['Photographer', 'Graphic Designer', 'Duta Pelajar Jawa Barat'],
            typeSpeed: 50,
            backSpeed: 30,
            loop: true
        });

        window.addEventListener('scroll', () => {
            const nav = document.getElementById('navbar');
            const toTop = document.getElementById('toTop');
            if (window.scrollY > 100) {
                nav.classList.add('scrolled');
                toTop.classList.add('active');
            } else {
                nav.classList.remove('scrolled');
                toTop.classList.remove('active');
            }
        });

        const statsSection = document.querySelector('#stats');
        const progressFills = document.querySelectorAll('.progress-fill');
        const counters = document.querySelectorAll('.counter-number');
        let animated = false;

        const animateStats = () => {
            progressFills.forEach(fill => {
                fill.style.width = fill.getAttribute('data-width');
            });
            counters.forEach(counter => {
                const target = +counter.getAttribute('data-target');
                const updateCount = () => {
                    const count = +counter.innerText;
                    if (count < target) {
                        counter.innerText = Math.ceil(count + (target/50));
                        setTimeout(updateCount, 40);
                    } else { counter.innerText = target; }
                };
                updateCount();
            });
        };

        window.addEventListener('scroll', () => {
            if (statsSection.getBoundingClientRect().top < window.innerHeight / 1.3 && !animated) {
                animateStats();
                animated = true;
            }
        });
    </script>
</body>
</html>
